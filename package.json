{
	"name": "node-starter",
	"version": "1.0.0",
	"main": "src/index.ts",
	"private": true,
	"scripts": {
		"dev": "cross-env NODE_ENV=dev nodemon",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "cross-env NODE_ENV=test jest",
		"lint": "eslint . --ext .ts",
		"prepare": "husky",
		"commit": "cz"
	},
	"jest": {
		"testMatch": [
			"**/test/**/*.ts",
			"**/?(*.)+(test).ts"
		],
		"roots": [
			"<rootDir>/src/tests"
		]
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/jest": "^30.0.0",
		"@types/swagger-ui-express": "^4.1.8",
		"commitizen": "^4.3.1",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.29.0",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"jest": "^30.0.3",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.0"
	},
	"dependencies": {
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.5.0",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.1",
		"helmet": "^8.1.0",
		"swagger-ui-express": "^5.0.1",
		"winston": "^3.17.0",
		"zod": "^3.25.67"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
